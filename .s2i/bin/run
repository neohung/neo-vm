#exec gunicorn "$APP_MODULE" --bind=0.0.0.0:8080 --access-logfile=- --config "$APP_CONFIG"
exec gunicorn "test:app" --bind=0.0.0.0:8080 --access-logfile=- -k flask_sockets.worker --workers=2
